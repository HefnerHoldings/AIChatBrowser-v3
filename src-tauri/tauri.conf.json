{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5000",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "MadEasy Browser",
    "version": "3.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["https://**", "http://**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.madeasy.browser",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MadEasy Browser",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}