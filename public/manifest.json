{
  "name": "MadEasy Browser",
  "short_name": "MadEasy",
  "description": "AI-Powered Autonomous Web Browser with advanced features",
  "theme_color": "#1a1a1a",
  "background_color": "#0a0a0a",
  "display": "standalone",
  "orientation": "any",
  "scope": "/",
  "start_url": "/?source=pwa",
  "id": "madeasy-browser-v1",
  "categories": ["productivity", "utilities"],
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-wide.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "412x915",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "New Tab",
      "short_name": "New",
      "description": "Open a new browser tab",
      "url": "/?action=new-tab",
      "icons": [{ "src": "/new-tab.png", "sizes": "192x192" }]
    },
    {
      "name": "Private Mode",
      "short_name": "Private",
      "description": "Open in private browsing mode",
      "url": "/?action=private",
      "icons": [{ "src": "/private.png", "sizes": "192x192" }]
    },
    {
      "name": "AI Assistant",
      "short_name": "AI",
      "description": "Open AI browsing assistant",
      "url": "/?action=ai",
      "icons": [{ "src": "/ai-assistant.png", "sizes": "192x192" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+browser",
      "url": "/?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "text/html": [".html", ".htm"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://madeasy-browser.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["navigate-new", "navigate-existing", "auto"]
  }
}